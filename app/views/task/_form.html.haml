= form_for @task, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :desc, :class => 'control-label'
    .controls
      = f.text_area :desc, :class => 'text_area'
  .control-group
    = f.label :due, :class => 'control-label'
    .controls
      = f.datetime_select :due, :class => 'datetime_select'
  .control-group
    = f.label :done, :class => 'control-label'
    .controls
      = f.check_box :done, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), task_path, :class => 'btn'
