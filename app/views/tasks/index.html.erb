<h1>Task List</h1>
  <% @tasks.each do |task| %>
    <div class="well">
      <span><% (task.done)?checked = "checked":checked = "" %> <input type="checkbox" id="<%= task.id %>-checkbox" data-task-id="<%= task.id %>" data-remote="true" name="<%= task.id %>-checkbox" <%= checked %> /></span>
      <span><a href="<%= task.name %>" class="name-popover" id="task_name_<%= task.id %>" data-content="<%= task.desc %>" data-original-title="Description"> <%= task.name %></a></span>
      <span class="pull-right">
        <a href="<%= edit_task_path(task) %>" class="btn-mini btn-info"><i class="icon-pencil"></i> Edit</a>
        <a href="<%= task_path(task) %>" class="btn-mini btn-danger" data-confirm="Are you sure you want to delete this task?" data-method="delete" rel="nofollow"><i class="icon-remove"></i> Delete</a>
      </span>
    </div>
  <% end %>
<a href="<%= new_task_path %>" class="btn btn-success"><i class="icon-plus"></i> New Task</a>
